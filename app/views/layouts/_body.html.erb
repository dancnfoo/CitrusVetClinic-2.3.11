<div id="bodyWrap">
  <div id="bar">
    <div id="topBar">
      <div id="contact">Contact Us:</div>
      <div id="phone">
        <span class="icon"><%= image_tag("../images/phone.png") %></span>
        <span class="text">909-596-1881</span>
      </div>
      <div id="email">
        <% mail_content = capture do %>
          <span class="icon"><%= image_tag("../images/email.png") %></span>
          <span class="text">Send us an Email</span>
        <% end %>
        <%= mail_to "info@citrusvetclinic.com", mail_content %>
      </div>
      <div id="directions">
        <% link_to contact_path do %>
        <span class="icon"><%= image_tag("../images/direction.png") %></span>
        <span class="text">Get Directions</span>
        <% end %>
      </div>
      <div id="social"><p><a href="http://www.facebook.com/pages/Citrus-Veterinary-Clinic/201780673165367" title="Find us on Facebook" target="_facebook"></a></p></div>
    </div>
  </div>
  
  <div id="contentWrap">
    <div id=<%= @content_id %>>
      <div id="contentInner">
        <div id="rightWrap">
          <%= yield :sidemenu %>
          <div id="button">
            <div id="buttonInner">
              <h4>HOURS OF OPERATION</h4>
              <div>
                <p>Mon, Tue, Thur, Fri</p>
                <p>8:00 am- 5:30 pm</p>
              </div>
              <div>
                <p>Wed, Sat</p>
                <p>8:30 am- 12:00 pm</p>
              </div>
            </div>
          </div>
        </div>
        <%= yield %>
      </div>
    </div>
    <div id="copyright">
      <p class="foot">Copyright &copy; <%= Time.new.year %> Citrus Veterinary Clinic. All rights reserved.</p>
    </div>
  </div>
</div>
